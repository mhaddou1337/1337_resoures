---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { buttonVariants } from "@/components/ui/button";
---

<BaseLayout
  title="1337R"
>
  <style>
    html, body {
      overflow-y: hidden;
      margin: 0;
      padding: 0;
      height: 100%;
    }
  </style>

  <section class="fixed inset-0 flex items-center justify-center bg-white dark:bg-zinc-950">
    <!-- Background gradient effects -->
    <div class="absolute -z-10 inset-0">
      <!-- Top gradient -->
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-[1400px] h-[600px]">
        <div class="absolute w-full h-full transform-gpu bg-gradient-to-r from-zinc-900 to-zinc-100 dark:from-zinc-100 dark:to-zinc-800 opacity-30 blur-3xl"></div>
      </div>
      
      <!-- Bottom gradient -->
      <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-full max-w-[1400px] h-[600px]">
        <div class="absolute w-full h-full transform-gpu bg-gradient-to-l from-zinc-900 to-zinc-100 dark:from-zinc-100 dark:to-zinc-800 opacity-30 blur-3xl"></div>
      </div>
    </div>

    <!-- Hero content -->
    <div class="w-full px-4 md:px-6">
      <div class="flex max-w-[1200px] mx-auto flex-col items-start gap-8 md:gap-10">
        <h1 class="text-4xl md:text-5xl lg:text-7xl font-bold tracking-tight leading-[1.15] pb-2 bg-clip-text text-transparent bg-gradient-to-r from-zinc-800 via-zinc-500 to-zinc-700 dark:from-zinc-200 dark:via-zinc-400 dark:to-zinc-300 max-w-full md:max-w-[900px]">
          Empowering Students to Share, Learn, and Succeed Together
        </h1>
        <p class="text-lg md:text-xl leading-8 text-zinc-600 dark:text-zinc-400 max-w-full md:max-w-[800px]">
          1337 Resources helps 1337 students share and access study materials. Learn, collaborate, and excel together in your coding journey.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 w-full sm:w-auto">
          <a
            href="https://1337.ma"
            target="_blank"
            rel="noreferrer"
            class={buttonVariants({ 
              size: "lg", 
              className: "text-base md:text-lg px-6 md:px-8 py-5 md:py-6 w-full sm:w-auto text-center"
            })}
          >
            Discover 1337
          </a>
          <a
            href="/sign-in"
            rel="noreferrer"
            class={buttonVariants({ 
              variant: "outline", 
              size: "lg", 
              className: "text-base md:text-lg px-6 md:px-8 py-5 md:py-6 w-full sm:w-auto text-center"
            })}
          >
            Sign In
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  import { isAuthenticated } from "../utils/auth";
  
  // Check authentication status on page load
  if (isAuthenticated()) {
    window.location.href = '/resources';
  }
</script>
